# Real-Time Moderation System Configuration

# LLM Configuration
# LLM_ENDPOINT=http://k8s-deepseek.elb.eu-west-1.amazonaws.com/v1/chat/completions
LLM_TIMEOUT=30.0
LLM_MAX_RETRIES=3

LLM_ENDPOINT=http://k8s-default-mistral.elb.us-west-2.amazonaws.com/v1/chat/completions
LLM_MODEL="/tmp/models/mistral-7b-v0-2"

# Database Configuration
DATABASE_URL=postgresql://postgres:password@postgres:5432/moderation_db
REDIS_URL=redis://redis:6379/0

# Service Endpoints
MCP_ENDPOINT=http://mcp-server:8000
FILTER_ENDPOINT=http://lightweight-filter:8001
DECISION_ENDPOINT=http://decision-handler:8003

# Chat Simulator Configuration
MESSAGE_INTERVAL=2.0
WHISPER_MODEL_SIZE=base

# Monitoring Configuration
PROMETHEUS_ENDPOINT=http://prometheus:9090
GRAFANA_ENDPOINT=http://grafana:3000

# Notification Configuration
NOTIFICATION_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
NOTIFICATION_CHANNEL=#moderation-alerts

# Security Configuration
JWT_SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=10.0
RATE_LIMIT_PER_USER=60
RATE_LIMIT_WINDOW=60

# Feature Flags
ENABLE_LIGHTWEIGHT_FILTER=true
ENABLE_WHISPER=true
ENABLE_METRICS=true
ENABLE_TRACING=true

# Development Configuration
DEBUG=false
RELOAD=false
